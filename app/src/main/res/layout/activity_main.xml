<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:layout_gravity="center"/>
    <Button
            android:text="Open detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/openButton"
            android:layout_gravity="center_horizontal" android:layout_marginTop="64dp"/>

    <Button
            android:text="Open list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/openListButton"
            android:layout_gravity="center_horizontal"/>

</FrameLayout>